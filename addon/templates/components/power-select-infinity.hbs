{{#if (hasBlock "inverse")}}
    <PowerSelectWithScroll
        @afterOptionsComponent={{this.afterOptionsComponent}}
        @allowClear={{this.allowClear}}
        @ariaDescribedBy={{this.ariaDescribedBy}}
        @ariaInvalid={{this.ariaInvalid}}
        @ariaLabel={{this.ariaLabel}}
        @ariaLabelledBy={{this.ariaLabelledBy}}
        @beforeOptionsComponent={{this.beforeOptionsComponent}}
        @buildSelection={{this.buildSelection}}
        @closeOnSelect={{this.closeOnSelect}}
        @defaultHighlighted={{this.defaultHighlighted}}
        @dir={{this.dir}}
        @destination={{this.destination}}
        @disabled={{@disabled}}
        @dropdownClass={{this.concatenatedDropdownClasses}}
        @extra={{@extra}}
        @horizontalPosition={{this.horizontalPosition}}
        @initiallyOpened={{this.initiallyOpened}}
        @loadingMessage={{@loadingMessage}}
        @loadMore={{@loadMore}}
        @matcher={{this.matcher}}
        @matchTriggerWidth={{this.matchTriggerWidth}}
        @noMatchesMessage={{this.noMatchesMessage}}
        @onblur={{this.onblur}}
        @onchange={{@onchange}}
        @onclose={{@onclose}}
        @onfocus={{action this.handleFocus}}
        @oninput={{@oninput}}
        @onkeydown={{action this.onKeyDown}}
        @onopen={{this.onopen}}
        @opened={{this.opened}}
        @options={{@options}}
        @optionsComponent={{unless fastboot.isFastBoot (component optionsComponent
            onScroll=this.onScroll
            estimateHeight=@estimateHeight
            @bufferSize=@bufferSize
            @staticHeight=@staticHeight
        )}}
        @placeholder={{@placeholder}}
        @renderInPlace={{@renderInPlace}}
        @search={{@search}}
        @searchEnabled={{@searchEnabled}}
        @searchField={{this.searchField}}
        @searchMessage={{this.searchMessage}}
        @searchPlaceholder={{this.searchPlaceholder}}
        @selected={{@selected}}
        @selectedItemComponent={{this.selectedItemComponent}}
        @tabindex={{this.tabindex}}
        @triggerClass={{this.concatenatedTriggerClasses}}
        @triggerComponent={{component triggerComponent
            loadingComponent=this.loadingComponent
            inputClass=this.inputClass
        }}
        @triggerId={{this.triggerId}}
        @triggerRole={{null}}
        @verticalPosition={{this.verticalPosition}}
        @calculatePosition={{this.calculatePosition}}
    as |option term|>
        {{yield to="inverse"}}
    </PowerSelectWithScroll>
