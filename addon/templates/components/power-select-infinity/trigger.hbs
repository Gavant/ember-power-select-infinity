<input type="search"
  value={{text}}
  role="combobox"
  id="ember-power-select-infinity-input-{{select.uniqueId}}"
  class={{concatenatedInputClasses}}
  autocomplete="off"
  placeholder={{placeholder}}
  oninput={{onInput}}
  onfocus={{onFocus}}
  onblur={{onBlur}}
  disabled={{select.disabled}}
  onkeydown={{action "handleKeydown"}}
  onmousedown={{action "stopPropagation"}}>
{{#if select.loading}}
    {{component loadingComponent}}
{{/if}}
{{#if canClear}}
    <span class="ember-power-select-infinity-clear-btn" onmousedown={{action "clear"}} ontouchstart={{action "clear"}}>&times;</span>
{{/if}}