<PowerSelect
    @afterOptionsComponent={{@afterOptionsComponent}}
    @allowClear={{this.allowClear}}
    @animationEnabled={{@animationEnabled}}
    @ariaDescribedBy={{@ariaDescribedBy}}
    @ariaLabel={{@ariaLabel}}
    @ariaLabelledBy={{@ariaLabelledBy}}
    @beforeOptionsComponent={{this.beforeOptionsComponent}}
    @buildSelection={{@buildSelection}}
    @calculatePosition={{@calculatePosition}}
    @closeOnSelect={{@closeOnSelect}}
    @defaultHighlighted={{@defaultHighlighted}}
    @destination={{@destination}}
    @disabled={{@disabled}}
    @dropdownClass={{this.dropdownClass}}
    @eventType={{@eventType}}
    @extra={{assign
        (hash
            bufferSize=this.bufferSize
            estimateHeight=this.estimateHeight
            staticHeight=this.staticHeight
            isLoadingMore=this.isLoadingMore
            isSearching=this.task.isRunning
            onLastReached=this.onLastReached
            triggerIsSearch=this.triggerIsSearch
            options=@options
            noMatchesMessage=this.noMatchesMessage
            hasInvokedSearch=this.hasInvokedSearch
            searchText=this.searchText
            clearSearch=this.clearSearch
            clearOptions=@clearOptions
        )
        @extra
    }}
    @groupComponent={{@groupComponent}}
    @highlightOnHover={{@highlightOnHover}}
    @horizontalPosition={{@horizontalPosition}}
    @initiallyOpened={{@initiallyOpened}}
    @loadingComponent={{@loadingComponent}}
    @loadingMessage={{@loadingMessage}}
    @matcher={{@matcher}}
    @matchTriggerWidth={{this.matchTriggerWidth}}
    @noMatchesMessage={{this.noMatchesMessage}}
    @onBlur={{this.onBlur}}
    @onChange={{@onChange}}
    @onClose={{@onClose}}
    @onFocus={{@onFocus}}
    @onInput={{this.onSearchInput}}
    @onKeydown={{@onKeydown}}
    @onOpen={{@onOpen}}
    @options={{@options}}
    @optionsComponent={{this.optionsComponent}}
    @placeholder={{@placeholder}}
    @preventScroll={{@preventScroll}}
    @registerAPI={{@registerAPI}}
    @renderInPlace={{@renderInPlace}}
    @scrollTo={{@scrollTo}}
    @search={{this.onSearch}}
    @searchEnabled={{this.searchEnabled}}
    @searchField={{this.searchField}}
    @searchMessage={{false}}
    @searchPlaceholder={{@searchPlaceholder}}
    @selected={{@selected}}
    @selectedItemComponent={{@selectedItemComponent}}
    @tabindex={{this.tabindex}}
    @triggerClass={{this.triggerClass}}
    @triggerComponent={{this.triggerComponent}}
    @triggerId={{@triggerId}}
    @triggerRole={{@triggerRole}}
    @typeAheadMatcher={{@typeAheadMatcher}}
    @verticalPosition={{@verticalPosition}}
    ...attributes
    as |option select|
>
    {{yield option select}}
</PowerSelect>