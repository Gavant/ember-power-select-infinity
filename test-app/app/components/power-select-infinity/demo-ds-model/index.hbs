<PowerSelectInfinity::DsModel
    @modelName="person"
    @selected={{this.selected}}
    @onChange={{this.onChange}}
    @canLoadMore={{this.canLoadMore}}
    @placeholder="Select a person"
    @searchPlaceholder="Search for people..."
    as |option|
>
    <div class="text-truncate">
        {{option.name}}
    </div>
</PowerSelectInfinity::DsModel>